{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./electron/main/*"
      ],
      "@db/*": [
        "./electron/main/database/*"
      ]
    }
  },
  "include": [
    "electron/main/**/*.ts",
    "electron/preload/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}